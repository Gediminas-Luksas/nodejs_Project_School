extends layout

block content
    
    .container
        .row
            .col-lg-8.col-md-10.mx-auto  
                .post-preview
                
                br
                each article, i in articles
                    h2.post-title
                        a(href="/articles/" + article._id)= article.title
                    p.post-meta
                        = article.date.toDateString()       
                    hr